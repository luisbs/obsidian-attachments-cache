{
    "private": true,
    "license": "GPL-3.0-or-later",
    "version": "1.3.4",
    "name": "@luis.bs/obsidian-attachments-cache",
    "description": "Plugin to cache images locally",
    "keywords": [
        "obsidian",
        "attachments",
        "images",
        "cache"
    ],
    "author": {
        "name": "Luis Brayan",
        "url": "https://github.com/luisbs"
    },
    "repository": {
        "url": "https://github.com/luisbs/obsidian-attachments-cache"
    },
    "publishConfig": {
        "provenance": true,
        "access": "public"
    },
    "files": [
        "dist/**/*"
    ],
    "type": "module",
    "types": "./dist/types.d.ts",
    "module": "./dist/main.js",
    "scripts": {
        "prepare": "simple-git-hooks",
        "lint:eslint": "eslint",
        "lint:prettier": "prettier --check src",
        "lint": "pnpm lint:eslint && pnpm lint:prettier",
        "watch": "vite",
        "build": "vite build",
        "ci:publish": "pnpm build && clean-pkg-json && changeset publish",
        "release": "changeset"
    },
    "dependencies": {
        "@luis.bs/obsidian-fnc": "^1.3.4",
        "minimatch": "^10.0.1"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.12",
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@eslint/js": "^9.19.0",
        "@types/node": "^20.17.17",
        "builtin-modules": "^3.3.0",
        "clean-pkg-json": "^1.2.0",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.14.0",
        "lint-staged": "^15.4.3",
        "obsidian": "^1.7.2",
        "prettier": "^3.4.2",
        "simple-git-hooks": "^2.11.1",
        "tslib": "^2.8.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.23.0",
        "vite": "^5.4.14",
        "vite-plugin-banner": "^0.8.0",
        "vite-plugin-static-copy": "^1.0.6"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "commit-msg": "npx commitlint -e -V"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint",
            "prettier"
        ]
    }
}
